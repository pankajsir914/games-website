# Poker Backend Server

# Create a .env file based on this example:
PORT=4000
DATABASE_URL=postgres://user:password@localhost:5432/poker
JWT_SECRET=replace_me_with_a_long_random_secret
ROUND_INTERVAL_MS=10000
MASTER_ADMIN_USERNAME=master
MASTER_ADMIN_PASSWORD=master123
MASTER_ADMIN_SEED_BALANCE=1000000
CORS_ORIGIN=*
# Optional: set to enable CSRF header check on state-changing requests
CSRF_TOKEN=change_me

# Sports API (API-SPORTS)
SPORTS_API_KEY=your_api_sports_key_here
# You can override bases if needed; defaults are set in code
SPORTS_API_FOOTBALL_BASE=https://v3.football.api-sports.io
SPORTS_API_CRICKET_BASE=https://v1.cricket.api-sports.io
SPORTS_API_HOCKEY_BASE=https://v1.hockey.api-sports.io
# Cache TTL in seconds for live endpoints (default: 10)
SPORTS_CACHE_TTL=10

# Cricket API Configuration
CRICAPI_KEY=a4cd2ec0-4175-4263-868a-22ef5cbd9316
CRICKET_REFRESH_INTERVAL=120
CRICKET_ENABLE_SCHEDULER=true

